MK_TARGETS_PROJECT_FILE ?= $(MK_TARGETS_PROJECT_TYPE_DIR)/$(PROJECT_SHORTNAME).mk

MK_PIPELINES_DIR ?= $(MK_INCLUDE_DIR)/pipelines
